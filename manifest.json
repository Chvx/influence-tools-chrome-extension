{
    "manifest_version": 3,
    "name": "Influence Tools",
    "description": "Add menu items for several Influence tools created by the community, and open them in an in-game window.",
    "version": "2.0",
    "content_scripts": [
        {
            "world": "MAIN",
            "css": [
                "globals/style.css"
            ],
            "js": [
                "globals/dom-core.js",
                "globals/tools.js",
                "content_script.js"
            ],
            "matches": [
                "https://game.influenceth.io/*"
            ]
        }
    ]
}
